@*@model IEnumerable<FingerPrint.Models.StaffCheckInAndOutReport>*@
@using FingerPrint.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div row>
    <div class="col-md-6" style="margin-left:850px">
        <button id="btnPdf" class="btn btn-primary">Pdf</button>
        <button id="btnPdf" class="btn btn-primary" style="margin-left:00px">Excel</button>
    </div>

</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="example">
    <tr>
        <th>
            Staff Id
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Department
        </th>
        <th>
            Branch
        </th>
        <th>
            Date
        </th>
        <th>
            Time In
        </th>
        <th>
            Time Out
        </th>
        <th>
            Status
        </th>
        <th>
            Total Hours
        </th>
        <th></th>
    </tr>


    @if (ViewBag.DepartmentDetails != null)
    {
        foreach (var item in ViewBag.DepartmentDetails)
        {
            <tr>
                <td>
                    @(item.StaffId)
                </td>
                <td>
                    @(item.firstName)
                </td>
                <td>
                    @(item.LastName)
                </td>
                <td>
                    @(item.Department)
                </td>
                <td>
                    @(item.Branch)
                </td>
                <td>
                    @(item.Date)
                </td>
                <td>
                    @(item.TimeIn)
                </td>
                <td>
                    @(item.TimeOut)
                </td>
                <td>
                    @(item.status)
                </td>
                <td>
                    @(item.TotalStaffHours)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    }
    else
    {
        <h1>No any branch</h1>
    }
</table>


@section scripts{
    <script>

        $("#btnPdf").click(function () {
            var element = document.getElementById('example');
            html2pdf(element);
        });
    </script>
}