@model FingerPrint.Models.Branch

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
	<div class="card" style="width:700px; height:220px; margin-left:20%; padding-left:0%;">

		<div class="card-header">
			<h4 class="text-center">Create Branch</h4>
		</div>
   <div class="card-body" style="margin-left:20%">

			@Html.AntiForgeryToken()

			<div class="form-horizontal">

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
							<div class="col-md-10">
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
							</div>
						</div>
						<h6 class="text-danger">@TempData["message"]</h6>
					</div>
					

					<div class="col-md-6">
						<div class="form-group">
							@Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "control-label" })
							<div class="col-md-10">
								@Html.DropDownList("CountryId", ViewBag.Branches as SelectList, "Select Country", new { @class = "form-select " })
								@* @Html.EditorFor(model => model.CountryId,  new { htmlAttributes = new { @class = "form-control" } }*@
								@Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
							</div>
						</div>
					</div>
				</div>
				<div class="form-group d-flex">
					<div class="col-md-offset-2 col-md-2">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
					<div class="col-md-offset-2 col-md-2">
						<input type="reset" value="Clear" class="btn btn-primary" />
					</div>
				</div>
			</div>


	</div>
   </div>
 }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
