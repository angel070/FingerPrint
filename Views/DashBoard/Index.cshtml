<body class="sb-na-fixed">

	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<h1 class="text-center text-uppercase mb-2">Admin Dashboard</h1>
				@*<ol class="breadcrumb mb-4 text-center">
						<li class="breadcrumb-item active text-uppercase"> Admin Dashboard</li>
					</ol>*@
				<div class="row">
					<div class="col-xl-3 col-md-6">
						<div class="card bg-primary text-white mb-4">
							<div class="card-body text-center">
								Total Employees<br />
								@ViewBag.Staff
							</div>
							<div class="card-footer d-flex align-items-center justify-content-between">
								<a class="small text-white stretched-link" href="~/Staff/Index">View Details</a>
								<div class="small text-white"><i class="fas fa-angle-right"></i></div>
							</div>
						</div>
					</div>
					<div class="col-xl-3 col-md-6">
						<div class="card bg-success text-white mb-4">
							<div class="card-body text-center">
								Present<br />
								@ViewBag.Present
							</div>

							<div class="card-footer d-flex align-items-center justify-content-between">
								<a class="small text-white stretched-link" href="~/StaffCheckInAndOut/Present">View Details</a>
								<div class="small text-white"><i class="fas fa-angle-right"></i></div>
							</div>
						</div>
					</div>
					<div class="col-xl-3 col-md-6">
						<div class="card bg-warning text-white mb-4">
							<div class="card-body text-center">
								Absent<br />
								@ViewBag.TodayAbsent
							</div>
							<div class="card-footer d-flex align-items-center justify-content-between">
								<a class="small text-white stretched-link" href="~/Absentees/TodayAbsent">View Details</a>
								<div class="small text-white"><i class="fas fa-angle-right"></i></div>
							</div>
						</div>
					</div>
					<div class="col-xl-3 col-md-6">
						<div class="card bg-danger text-white mb-4">
							<div class="card-body text-center">
								Late Comers<br />
								@ViewBag.LateReport
							</div>
							<div class="card-footer d-flex align-items-center justify-content-between">
								<a class="small text-white stretched-link" href="~/StaffCheckInAndOut/LateEmployees">View Details</a>
								<div class="small text-white"><i class="fas fa-angle-right"></i></div>
							</div>
						</div>
					</div>
				</div>

				<div>

				</div>
			</div>

		</main>

	</div>
    <div class="row">
        <div class="col-6">
            <div class="card">
