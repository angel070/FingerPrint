<!DOCTYPE html>
<html>
<head>

	<link rel="preconnect" href="https://fonts.gstatic.com">

	<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap"
		  rel="stylesheet">
	@*<link rel="stylesheet" href="~/assets/css/main.css">*@
	@*<link rel="stylesheet" href="~/assets/css/bootstrap.css">*@
	<link rel="stylesheet" href="https://www.w3schools.com/" />

    <link rel="stylesheet" href="~/assets/vendors/simple-datatables/style.css">
	<!--fontawesome-->
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	@*<link rel="stylesheet"
		href="~/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">*@
	<link rel="stylesheet" href="~/assets/vendors/bootstrap-icons/bootstrap-icons.css">
	<link rel="stylesheet" href="~/assets/css/app.css">
	<link rel="shortcut icon" href="~/assets/images/favicon.svg" type="image/x-icon">
	<link />
	<link rel="stylesheet" type="text/css" href="~/Datatable/datatables.min.css" />
	<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css">

	@*<link href="~/assets/table2excel.jquery.json">*@
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - BIZ-BAZ</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@RenderSection("styles", required: false)

</head>

<body>
	<div id="app">
		<nav class="navbar  fixed-top navbar-light bg-success" style="color:White;margin-left:300px;margin-right:1px">
			<h2 style="margin-left:180px">ATTENDANCE MANAGEMENT SYSTEM</h2>
			<ul style="margin-right:40px">
				<li class="nav-item dropdown">
					
					<a class="nav-link dropdown-toggle text-white  " href="#" role="button" data-bs-toggle="dropdown" style="text-align:right">@Session["UserRoles"]</a>
					<ul class="dropdown-menu">
						<li><a class="dropdown-item " href="~/ChangePassword/Create">Change Password</a></li>
						<li><a class="dropdown-item" href="~/User/Logout">Logout</a></li>
					</ul>
				</li>
			</ul>
		</nav>

		<div id="sidebar" class="active">
			<div class="sidebar-wrapper active bg-light">
				<div class="sidebar-header">
					<div class="d-flex justify-content-between">
						<div class="toggler">
							<img src="~/assets/images/biz_logo_circle1.png" style="width:90px; margin-left:30px; height:100px;width:100px" />
						</div>
					</div>
				</div>

				<div class="sidebar-menu bg-light" style="background-color:#367588;color:white; padding-top:0px; height:30px; width:20px">

					<ul class="menu mb-2">

						<li class="sidebar-item ">
							<a href="~/DashBoard/Index"
							   class='sidebar-link' onclick="toggle_active_class()">
								<i class="bi bi-grid-fill"></i>
								<span>Dashboard</span>
							</a>
						</li>
						@if (Session["UserRoles"].ToString() == "Admin")
						{
							<li class="sidebar-item">
								<div class="dropdown">
									<a class=" dropdown-toggle sidebar-link" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										<i class="bi bi-gear-fill"></i>
										<span>Setup</span>
									</a>

									<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
										<li><a class="dropdown-item" href="~/Country/Index"><span>Country</span></a></li>
										<li><a class="dropdown-item" href="~/Branch/Index">Branch</a></li>
										<li><a class="dropdown-item" href="~/Department/Index">Department</a></li>
										<li><a class="dropdown-item" href="~/UserRoles/Index">UserRoles</a></li>
										<li><a class="dropdown-item" href="~/User/Index">Users</a></li>
										<li><a class="dropdown-item" href="~/TimeInAndOut/Index">Set Time</a></li>
										<li><a class="dropdown-item" href="~/Holiday/Index">Holidays</a></li>
										<li><a class="dropdown-item" href="~/LeaveType/Index">Leave Type</a></li>
										<li><a class="dropdown-item" href="~/Leave/Index">Leave </a></li>
									</ul>
								</div>
							</li>
						}

						<li class="sidebar-item">
							<a href="~/TimeInAndOut/Index" class='sidebar-link' onclick="
                               toggle_active_class()">
								<i class="bi bi-alarm-fill"></i>
								<span>Set Time</span>
							</a>
						</li>
						
						<li class="sidebar-item">
							<a href="~/Holiday/Index" class='sidebar-link' onclick="
                               toggle_active_class()">
								<i class="bi bi-calendar-check-fill"></i>
								<span>Holidays</span>
							</a>
						</li>
						<li class="sidebar-item">
							<a href="~/Staff/Index" class='sidebar-link' onclick="
                               toggle_active_class()">
								<i class="bi bi-people-fill"></i>
								<span>Staff</span>
							</a>
						</li>

						<li class="sidebar-item">
							<div class="dropdown">
								<a class=" dropdown-toggle sidebar-link" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-file-bar-graph-fill"></i>
									<span>Reports</span>
								</a>

								<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
									<li><a class="dropdown-item" href="~/StaffCheckInAndOut/Index"> Attendance</a></li>
									<li><a class="dropdown-item" href="~/DailyReport/Create">Daily Report</a></li>
									<li><a class="dropdown-item" href="~/BranchReport/Create">Branch Report</a></li>
									<li><a class="dropdown-item" href="~/DepartmentReport/Create">Department Report</a></li>
									<li><a class="dropdown-item" href="~/DateRange/DateRange">Individual Report</a></li>
									<li><a class="dropdown-item" href="~/LateReport/LateStaffs">Late Report</a></li>
									<li><a class="dropdown-item" href="~/OverTimeHours/Index">OverTimeReport</a></li>
									<li><a class="dropdown-item" href="~/Absentees/Create">Absentees Report</a></li>
								</ul>
							</div>
						</li>

						<li class="sidebar-item  ">
							<a href="~/User/Logout" class='sidebar-link'>
								<form id="logout-form" action="#" method="POST"
									  class="d-none"></form> <i class="bi bi-box-arrow-down-right"></i>
								<span> Logout </span>
							</a>
						</li>
					</ul>

				</div>
				<button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
			</div>
		</div>

		<div id="main">
			<header class="mb-3">
				<a href="#" class="burger-btn d-block d-xl-none">
					<i class="bi bi-justify fs-3"></i>
				</a>
			</header>

			@RenderBody()


			<footer style="top:100%; position:fixed; height:100% ; margin-left:20%" class="text-center">
				<div class="footer clearfix mb-0 text-muted footer-static ">

					<div class="text-center">
						<p class="m-lg-4 ">
							@DateTime.Now.Year &copy; Bizlogic Solutions Company Ltd <a href="http://ahmadsaugi.com">
							</a>
						</p>
					</div>
				</div>
			</footer>
		</div>
		@Scripts.Render("~/bundles/jquery")

		<script src=" ~/js/mfs.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.0/html2pdf.bundle.min.js"></script>

		<script src="~/assets/js/bootstrap.bundle.min.js"></script>
		<script src="~/assets/vendors/simple-datatables/simple-datatables.js">
		</script>
		<script src="~/Datatable/datatables.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.js"></script>
		<script src="~/js/mfs100Scripts.js"></script>
		<script src='https://cdn.rawgit.com/simonbengtsson/jsPDF/requirejs-fix-dist/dist/jspdf.debug.js'></script>

		<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
		<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
		<script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
		<script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
		<script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
		<script src="https://cdn.datatables.net/plug-ins/1.12.1/api/sum().js"></script>






		@RenderSection("scripts", required: false)
		@*<script src="~/assets/table2excel.jquery.json"></script>*@

</body>
</html>
