@model FingerPrint.Models.LeaveType

@{
    ViewBag.Title = "Create";
}

<div class="card" style="width:800px;margin-left:10%;margin-top:17%">
	<div class="card-header">
		<h2 class="text-center">LeaveType</h2>
	</div>
	<div class="card-body" style="width:600px;margin-left:15%; align-items:center;">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="row">
					<div class="form-group col-md-6">
						@Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group col-md-6">
						@Html.LabelFor(model => model.ShortType, htmlAttributes: new { @class = "control-label col-md-" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.ShortType, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.ShortType, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
				</div>
			</div>
		}
	</div>
</div>




