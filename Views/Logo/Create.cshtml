@model FingerPrint.Models.Logo

@{
    ViewBag.Title = "Create";
}


<div class="card" style="width:600px;margin-left:17%;margin-top:13%">
	<div class="card-header">
		<h2 class="text-center">Upload Logo</h2>
	</div>
	<div class="card-body">

		@using (Html.BeginForm("Create", "Logo", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="row d-flex">
				<div class="form-group col-md-6">
					@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group col-md-6">
					Upload
					<div class="col-md-10">
						<input type="file" name="picture" class="form-control"  accept="image/png, image/jpeg"  />
					</div>
				</div>
			</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
				</div>
			</div>
		}

	</div>
</div>
